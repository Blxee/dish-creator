<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Form to JSON Download</title>
</head>
<body>
  <form id="myForm">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name"><br><br>
    
    <label for="email">Email:</label>
    <input type="email" id="email" name="email"><br><br>
    
    <label for="age">Age:</label>
    <input type="number" id="age" name="age"><br><br>
    
    <button type="button" onclick="submitForm()">Submit</button>
  </form>

  <script>
    function submitForm() {
      // Get form data
      const formData = new FormData(document.getElementById('myForm'));
      
      // Convert form data to JSON
      const jsonObject = {};
      formData.forEach((value, key) => {
        jsonObject[key] = value;
      });
      const jsonData = JSON.stringify(jsonObject);
      
      // Create download link
      const downloadLink = document.createElement('a');
      downloadLink.href = 'data:text/json;charset=utf-8,' + encodeURIComponent(jsonData);
      downloadLink.download = 'formData.json';
      
      // Trigger download
      downloadLink.click();
    }
  </script>


  <h2>Upload a File</h2>
  <form id="uploadForm">
    <input type="file" id="fileInput" name="fileInput">
    <button type="button" onclick="uploadFile()">Upload</button>
  </form>
  
  <h2>Uploaded File Contents</h2>
  <pre id="fileContents"></pre>

  <script>
    function uploadFile() {
      const fileInput = document.getElementById('fileInput');
      const file = fileInput.files[0];

      if (file) {
        const reader = new FileReader();
        reader.onload = function(event) {
          const contents = event.target.result;
          document.getElementById('fileContents').textContent = contents;
          localStorage.setItem('uploadedFile', contents); // Store in browser local storage
        };
        reader.readAsText(file);
      } else {
        alert('Please select a file to upload.');
      }
    }

    // Load file from local storage when page loads
    window.onload = function() {
      const storedFile = localStorage.getItem('uploadedFile');
      if (storedFile) {
        document.getElementById('fileContents').textContent = storedFile;
      }
    };
  </script>
</body>
</html>
